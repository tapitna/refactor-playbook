global
  log /dev/log  local0
  log /dev/log  local1 notice
  stats socket /var/lib/haproxy/stats level admin
  chroot /var/lib/haproxy
  user haproxy
  group haproxy
  daemon

defaults
  log global
  mode  http
  option  httplog
  option  dontlognull
        timeout connect 5000
        timeout client 50000
        timeout server 50000

frontend hafrontend
    bind *:{{haproxy_port}}
    mode http
    default_backend app-servers

backend app-servers
    mode http
    balance roundrobin
    option forwardfor
    #server app1 app1.{{GUID}}.internal:8080 cookie app1 check
    #server app2 app2.{{GUID}}.internal:8080 cookie app2 check
{% for host in ha_backend_servers %}
    server {{ hostvars[host]['inventory_hostname_short']}} {{ hostvars[host]['inventory_hostname'] }}:{{ tomcat_port}} cookie {{ hostvars[host]['inventory_hostname_short']}} check
{% endfor %}
